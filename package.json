{
	"name": "htmx-router",
	"version": "2.0.6",
	"description": "A lightweight SSR framework with server+client islands",
	"keywords": [ "htmx", "router", "client islands", "ssr", "vite" ],
	"type": "module",
	"scripts": {
		"build": "tsc"
	},
	"main": "./index.js",
	"exports": {
		".":              "./index.js",
		"./cookies":      "./cookies.js",
		"./css":          "./css.js",
		"./defer":        "./defer.js",
		"./endpoint":     "./endpoint.js",
		"./event-source": "./event-source.js",
		"./navigate":     "./navigate.js",
		"./response":     "./response.js",
		"./router":       "./router.js",
		"./server":       "./server.js",
		"./shell":        "./shell.js",
		"./status":       "./status.js",
		"./timer":        "./timer.js",
		"./vite":         "./vite/index.js",

		"./util/parameters": "./util/parameters.js",

		"./internal/client": "./internal/client.js",
		"./internal/mount":  "./internal/mount.js"
	},
	"bin": {
		"htmx-router": "cli/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AjaniBilby/htmx-router.git"
	},
	"author": "Ajani Bilby",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/AjaniBilby/htmx-router/issues"
	},
	"homepage": "https://htmx-router.ajanibilby.com/",
	"dependencies": {
		"es-module-lexer": "^1.7.0",
		"vite": "^6.3.5"
	},
	"devDependencies": {
		"@types/node": "^20.4.5",
		"chalk": "^5.4.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6"
	}
}
