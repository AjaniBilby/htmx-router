{
	"name": "htmx-router",
	"version": "2.1.5",
	"description": "A lightweight SSR framework with server+client islands",
	"keywords": [ "htmx", "router", "client islands", "ssr", "vite" ],
	"type": "module",
	"scripts": {
		"build": "tsc"
	},
	"main": "./dist/index.js",
	"exports": {
		".":              "./dist/index.js",
		"./cookies":      "./dist/cookies.js",
		"./css":          "./dist/css.js",
		"./defer":        "./dist/defer.js",
		"./endpoint":     "./dist/endpoint.js",
		"./event-source": "./dist/event-source.js",
		"./navigate":     "./dist/navigate.js",
		"./response":     "./dist/response.js",
		"./router":       "./dist/router.js",
		"./server":       "./dist/server.js",
		"./shell":        "./dist/shell.js",
		"./status":       "./dist/status.js",
		"./timer":        "./dist/timer.js",
		"./vite":         "./dist/vite/index.js",

		"./util/parameters": "./dist/util/parameters.js",

		"./internal/client": "./dist/internal/client.js",
		"./internal/mount":  "./dist/internal/mount.js"
	},
	"bin": {
		"htmx-router": "dist/cli/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AjaniBilby/htmx-router.git"
	},
	"author": "Ajani Bilby",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/AjaniBilby/htmx-router/issues"
	},
	"homepage": "https://htmx-router.ajanibilby.com/",
	"dependencies": {
		"es-module-lexer": "^1.7.0",
		"vite": "^6.3.5"
	},
	"devDependencies": {
		"@types/node": "^20.4.5",
		"chalk": "^5.4.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6"
	}
}
